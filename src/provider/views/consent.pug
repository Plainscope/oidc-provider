extends layout

block content
  .consent-container
    h2 #{title}
    if client
      .client-info
        h3 Application Authorization
        p.client-name
          strong #{client.clientName || client.clientId}
          |  is requesting access to your account
    if details && details.missingOIDCScope
      .scopes
        h4 This application would like to:
        ul
          each scope in details.missingOIDCScope
            li= scope
    if details && details.missingOIDCClaims
      .claims
        h4 Access the following information:
        ul
          each claim in details.missingOIDCClaims
            li= claim
    .actions
      form(action=`/interaction/${uid}/confirm`, method="post")
        button.btn.btn-primary(type="submit") Authorize
      form(action=`/interaction/${uid}/abort`, method="post")
        button.btn.btn-secondary(type="submit") Deny
    if session
      details.session-debug
        h4 Session Information
        pre= session
    if dbg
      details.debug-info
        h4 Debug Information
        if dbg.params
          div
            strong Parameters:
            pre= dbg.params
        if dbg.prompt
          div
            strong Prompt:
            pre= dbg.prompt
