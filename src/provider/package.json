{
  "name": "oidc-provider",
  "version": "0.0.1",
  "description": "OAuth 2.0 (RFC 6749) Authorization Server with support for OpenID Connect (OIDC) based on https://github.com/panva/node-oidc-provider",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && node -e \"require('fs').copyFileSync('src/config.json', 'dist/config.json')\" && node -e \"require('fs').cpSync('src/views', 'dist/views', {recursive: true})\"",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.8.1",
    "cookie-parser": "^1.4.7",
    "express": "^5.2.1",
    "oidc-provider": "^9.5.2",
    "pug": "^3.0.3",
    "validator": "^13.15.23"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.7",
    "@types/node": "^20.19.27",
    "@types/oidc-provider": "^9.5.0",
    "@types/validator": "^13.11.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Plainscope/oidc-provider.git"
  },
  "keywords": [
    "auth",
    "oauth",
    "authentication",
    "authorization",
    "oauth",
    "2.0",
    "oauth",
    "2.1",
    "oauth",
    "oauth2",
    "oidc",
    "openid",
    "provider",
    "server"
  ],
  "author": "Plainscope",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Plainscope/oidc-provider/issues"
  },
  "homepage": "https://github.com/Plainscope/oidc-provider#readme"
}
