extends layout

block content
  style.
    .form-container {
      max-width: 600px;
      margin: 0 auto;
    }
    .header-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }
    h1 {
      color: #2d3748;
      margin: 0;
    }
    .form-group {
      margin-bottom: 1.5rem;
    }
    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      color: #4a5568;
      font-weight: 600;
      font-size: 0.875rem;
    }
    .form-group input,
    .form-group textarea {
      width: 100%;
      padding: 0.75rem;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      font-size: 0.875rem;
      transition: border-color 0.2s;
      font-family: inherit;
    }
    .form-group input:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: #667eea;
    }
    .form-group textarea {
      resize: vertical;
      min-height: 100px;
    }
    .form-group small {
      display: block;
      margin-top: 0.25rem;
      color: #718096;
      font-size: 0.75rem;
    }
    .error-message {
      background: #fed7d7;
      color: #c53030;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      font-size: 0.875rem;
    }
    .form-actions {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
    }
    .required {
      color: #e53e3e;
    }

  .card.form-container
    .header-actions
      h1= title
      a.btn.btn-secondary(href="/directory/roles") Cancel
    
    if error
      .error-message= error
    
    form(method="POST", action=role ? `/directory/roles/${role.id}/update` : '/directory/roles')
      .form-group
        label(for="name") Role Name 
          span.required *
        input#name(
          type="text",
          name="name",
          value=role ? role.name : '',
          required,
          maxlength="255",
          placeholder="e.g., administrator, moderator"
        )
        small Unique name for the role (alphanumeric and underscores recommended)
      
      .form-group
        label(for="description") Description
        textarea#description(
          name="description",
          maxlength="500",
          placeholder="Brief description of the role's purpose and permissions"
        )= role ? role.description : ''
        small Optional description of what this role represents
      
      .form-actions
        button.btn.btn-primary(type="submit")
          = role ? 'Update Role' : 'Create Role'
        a.btn.btn-secondary(href="/directory/roles") Cancel
