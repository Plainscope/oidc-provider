extends layout

block content
  .card
    .user-header
      div
        h1= user.username
        p(style="color: #718096; margin-top: 0.5rem;")= user.display_name
      div(style="display: flex; gap: 1rem;")
        a.btn.btn-primary(href=`/directory/users/${user.id}/edit`) Edit User
        button.btn.btn-danger#delete-user-btn(data-user-id=user.id, data-username=user.username) Delete User
        a.btn.btn-secondary(href="/directory/users") ← Back to Users
    
    .section
      h2 Basic Information
      .info-grid
        .info-item
          .info-label User ID
          .info-value= user.id
        .info-item
          .info-label Username
          .info-value= user.username
        .info-item
          .info-label First Name
          .info-value= user.first_name || 'N/A'
        .info-item
          .info-label Last Name
          .info-value= user.last_name || 'N/A'
        .info-item
          .info-label Display Name
          .info-value= user.display_name || 'N/A'
        .info-item
          .info-label Domain
          .info-value= user.domain_name
        .info-item
          .info-label Status
          .info-value= user.is_active ? 'Active' : 'Inactive'
        .info-item
          .info-label Created At
          .info-value= new Date(user.created_at).toLocaleString()
    
    .section
      h2 Email Addresses
      if emails && emails.length > 0
        table
          thead
            tr
              th Email
              th Primary
              th Verified
          tbody
            each email in emails
              tr
                td= email.email
                td= email.is_primary ? 'Yes' : 'No'
                td= email.is_verified ? 'Yes' : 'No'
      else
        p No email addresses found.
    
    .section
      h2 Roles
      if roles && roles.length > 0
        div#roles-list
          each role in roles
            span.badge.badge-role.badge-removable(data-role-id=role.id, data-role-name=role.name)
              = role.name
              button.badge-remove-btn(type="button", title="Remove role") ✕
      else
        p No roles assigned.
      
      if availableRoles && availableRoles.length > 0
        .assignment-controls
          .form-group
            label(for="role-select") Add Role:
            select#role-select(data-user-id=user.id)
              option(value="") Select a role...
              each role in availableRoles
                option(value=role.id)= role.name
          button.btn.btn-primary.btn-sm#add-role-btn(type="button") Add
    
    .section
      h2 Groups
      if groups && groups.length > 0
        div#groups-list
          each group in groups
            span.badge.badge-group.badge-removable(data-group-id=group.id, data-group-name=group.name)
              = group.name
              button.badge-remove-btn(type="button", title="Remove group") ✕
      else
        p No groups assigned.
      
      if availableGroups && availableGroups.length > 0
        .assignment-controls
          .form-group
            label(for="group-select") Add Group:
            select#group-select(data-user-id=user.id)
              option(value="") Select a group...
              each group in availableGroups
                option(value=group.id)= group.name
          button.btn.btn-primary.btn-sm#add-group-btn(type="button") Add
    
    if properties && properties.length > 0
      .section
        h2 Properties
        table
          thead
            tr
              th Key
              th Value
          tbody
            each prop in properties
              tr
                td= prop.key
                td= prop.value
    
    script.
      const userId = '#{user.id}';
      
      // Delete user functionality
      document.getElementById('delete-user-btn')?.addEventListener('click', async () => {
        const username = document.getElementById('delete-user-btn').dataset.username;
        
        showConfirm(`Are you sure you want to delete user "${username}"? This action cannot be undone and will remove all associated data.`, async () => {
          try {
            const response = await fetch(`/directory/users/${userId}/delete`, {
              method: 'POST'
            });
            
            if (response.ok) {
              window.location.href = '/directory/users';
            } else {
              const data = await response.json();
              showAlert(data.error || 'Failed to delete user', 'Error');
            }
          } catch (err) {
            showAlert('Error: ' + err.message, 'Error');
          }
        }, 'Delete User');
      });
      
      // Add role functionality
      document.getElementById('add-role-btn')?.addEventListener('click', async () => {
        const roleSelect = document.getElementById('role-select');
        const roleId = roleSelect?.value;
        
        if (!roleId) {
          showAlert('Please select a role', 'No Role Selected');
          return;
        }
        
        try {
          const response = await fetch(`/directory/users/${userId}/roles/${roleId}`, { method: 'POST' });
          if (response.ok) {
            location.reload();
          } else {
            const data = await response.json();
            showAlert('Error: ' + (data.error || 'Failed to add role'), 'Error');
          }
        } catch (err) {
          showAlert('Error: ' + err.message, 'Error');
        }
      });
      
      // Remove role functionality
      document.querySelectorAll('#roles-list .badge-remove-btn').forEach(btn => {
        btn.addEventListener('click', async () => {
          const badge = btn.parentElement;
          const roleId = badge.dataset.roleId;
          const roleName = badge.dataset.roleName;
          
          showConfirm(`Remove role "${roleName}" from this user?`, async () => {
            try {
              const response = await fetch(`/directory/users/${userId}/roles/${roleId}/remove`, { method: 'POST' });
              if (response.ok) {
                location.reload();
              } else {
                const data = await response.json();
                showAlert('Error: ' + (data.error || 'Failed to remove role'), 'Error');
              }
            } catch (err) {
              showAlert('Error: ' + err.message, 'Error');
            }
          }, 'Remove Role');
        });
      });
      
      // Add group functionality
      document.getElementById('add-group-btn')?.addEventListener('click', async () => {
        const groupSelect = document.getElementById('group-select');
        const groupId = groupSelect?.value;
        
        if (!groupId) {
          showAlert('Please select a group', 'No Group Selected');
          return;
        }
        
        try {
          const response = await fetch(`/directory/users/${userId}/groups/${groupId}`, { method: 'POST' });
          if (response.ok) {
            location.reload();
          } else {
            const data = await response.json();
            showAlert('Error: ' + (data.error || 'Failed to add group'), 'Error');
          }
        } catch (err) {
          showAlert('Error: ' + err.message, 'Error');
        }
      });
      
      // Remove group functionality
      document.querySelectorAll('#groups-list .badge-remove-btn').forEach(btn => {
        btn.addEventListener('click', async () => {
          const badge = btn.parentElement;
          const groupId = badge.dataset.groupId;
          const groupName = badge.dataset.groupName;
          
          showConfirm(`Remove group "${groupName}" from this user?`, async () => {
            try {
              const response = await fetch(`/directory/users/${userId}/groups/${groupId}/remove`, { method: 'POST' });
              if (response.ok) {
                location.reload();
              } else {
                const data = await response.json();
                showAlert('Error: ' + (data.error || 'Failed to remove group'), 'Error');
              }
            } catch (err) {
              showAlert('Error: ' + err.message, 'Error');
            }
          }, 'Remove Group');
        });
      });
