extends layout

block content
  style.
    .user-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }
    h1 {
      color: #2d3748;
      margin: 0;
    }
    .section {
      margin-bottom: 2rem;
    }
    .section h2 {
      color: #4a5568;
      font-size: 1.25rem;
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #e2e8f0;
    }
    .info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }
    .info-item {
      padding: 1rem;
      background: #f7fafc;
      border-radius: 8px;
    }
    .info-label {
      font-size: 0.75rem;
      color: #718096;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 0.25rem;
    }
    .info-value {
      color: #2d3748;
      font-weight: 500;
    }
    .badge {
      display: inline-block;
      padding: 0.35rem 0.75rem;
      border-radius: 12px;
      font-size: 0.75rem;
      font-weight: 600;
      margin-right: 0.5rem;
      margin-bottom: 0.5rem;
      position: relative;
    }
    .badge-role {
      background: #bee3f8;
      color: #2c5282;
    }
    .badge-group {
      background: #fbd38d;
      color: #744210;
    }
    .badge-removable {
      padding-right: 1.75rem;
    }
    .badge-remove-btn {
      position: absolute;
      right: 0.25rem;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(0, 0, 0, 0.2);
      border: none;
      color: inherit;
      width: 1.25rem;
      height: 1.25rem;
      border-radius: 50%;
      cursor: pointer;
      font-size: 0.65rem;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
    }
    .badge-remove-btn:hover {
      background: rgba(0, 0, 0, 0.4);
      transform: translateY(-50%) scale(1.1);
    }
    .assignment-controls {
      display: flex;
      gap: 1rem;
      align-items: flex-end;
      margin-top: 1rem;
      flex-wrap: wrap;
    }
    .form-group {
      flex: 1;
      min-width: 250px;
    }
    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      color: #4a5568;
      font-weight: 600;
      font-size: 0.875rem;
    }
    .form-group select {
      width: 100%;
      padding: 0.5rem;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      font-size: 0.875rem;
      transition: border-color 0.2s;
    }
    .form-group select:focus {
      outline: none;
      border-color: #667eea;
    }
    .btn-sm {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      text-align: left;
      padding: 0.75rem;
      border-bottom: 1px solid #e2e8f0;
    }
    th {
      background: #f7fafc;
      font-weight: 600;
      color: #4a5568;
    }
  
  .card
    .user-header
      div
        h1= user.username
        p(style="color: #718096; margin-top: 0.5rem;")= user.display_name
      a.btn.btn-secondary(href="/directory/users") ← Back to Users
    
    .section
      h2 Basic Information
      .info-grid
        .info-item
          .info-label User ID
          .info-value= user.id
        .info-item
          .info-label Username
          .info-value= user.username
        .info-item
          .info-label First Name
          .info-value= user.first_name || 'N/A'
        .info-item
          .info-label Last Name
          .info-value= user.last_name || 'N/A'
        .info-item
          .info-label Display Name
          .info-value= user.display_name || 'N/A'
        .info-item
          .info-label Domain
          .info-value= user.domain_name
        .info-item
          .info-label Status
          .info-value= user.is_active ? 'Active' : 'Inactive'
        .info-item
          .info-label Created At
          .info-value= new Date(user.created_at).toLocaleString()
    
    .section
      h2 Email Addresses
      if emails && emails.length > 0
        table
          thead
            tr
              th Email
              th Primary
              th Verified
          tbody
            each email in emails
              tr
                td= email.email
                td= email.is_primary ? 'Yes' : 'No'
                td= email.is_verified ? 'Yes' : 'No'
      else
        p No email addresses found.
    
    .section
      h2 Roles
      if roles && roles.length > 0
        div#roles-list
          each role in roles
            span.badge.badge-role.badge-removable(data-role-id=role.id)
              = role.name
              button.badge-remove-btn(type="button", title="Remove role") ✕
      else
        p No roles assigned.
      
      if availableRoles && availableRoles.length > 0
        .assignment-controls
          .form-group
            label(for="role-select") Add Role:
            select#role-select(data-user-id=user.id)
              option(value="") Select a role...
              each role in availableRoles
                option(value=role.id)= role.name
          button.btn.btn-primary.btn-sm#add-role-btn(type="button") Add
    
    .section
      h2 Groups
      if groups && groups.length > 0
        div#groups-list
          each group in groups
            span.badge.badge-group.badge-removable(data-group-id=group.id)
              = group.name
              button.badge-remove-btn(type="button", title="Remove group") ✕
      else
        p No groups assigned.
      
      if availableGroups && availableGroups.length > 0
        .assignment-controls
          .form-group
            label(for="group-select") Add Group:
            select#group-select(data-user-id=user.id)
              option(value="") Select a group...
              each group in availableGroups
                option(value=group.id)= group.name
          button.btn.btn-primary.btn-sm#add-group-btn(type="button") Add
    
    if properties && properties.length > 0
      .section
        h2 Properties
        table
          thead
            tr
              th Key
              th Value
          tbody
            each prop in properties
              tr
                td= prop.key
                td= prop.value
    
    script.
      const userId = '#{user.id}';
      
      // Add role functionality
      document.getElementById('add-role-btn')?.addEventListener('click', async () => {
        const roleSelect = document.getElementById('role-select');
        const roleId = roleSelect?.value;
        
        if (!roleId) {
          showAlert('Please select a role', 'No Role Selected');
          return;
        }
        
        try {
          const response = await fetch(`/directory/users/${userId}/roles/${roleId}`, { method: 'POST' });
          if (response.ok) {
            location.reload();
          } else {
            const data = await response.json();
            showAlert('Error: ' + (data.error || 'Failed to add role'), 'Error');
          }
        } catch (err) {
          showAlert('Error: ' + err.message, 'Error');
        }
      });
      
      // Remove role functionality
      document.querySelectorAll('#roles-list .badge-remove-btn').forEach(btn => {
        btn.addEventListener('click', async () => {
          const roleId = btn.parentElement.dataset.roleId;
          const roleName = btn.parentElement.textContent.trim().replace('✕', '').trim();
          
          showConfirm(`Remove role "${roleName}" from this user?`, async () => {
            try {
              const response = await fetch(`/directory/users/${userId}/roles/${roleId}/remove`, { method: 'POST' });
              if (response.ok) {
                location.reload();
              } else {
                const data = await response.json();
                showAlert('Error: ' + (data.error || 'Failed to remove role'), 'Error');
              }
            } catch (err) {
              showAlert('Error: ' + err.message, 'Error');
            }
          }, 'Remove Role');
        });
      });
      
      // Add group functionality
      document.getElementById('add-group-btn')?.addEventListener('click', async () => {
        const groupSelect = document.getElementById('group-select');
        const groupId = groupSelect?.value;
        
        if (!groupId) {
          showAlert('Please select a group', 'No Group Selected');
          return;
        }
        
        try {
          const response = await fetch(`/directory/users/${userId}/groups/${groupId}`, { method: 'POST' });
          if (response.ok) {
            location.reload();
          } else {
            const data = await response.json();
            showAlert('Error: ' + (data.error || 'Failed to add group'), 'Error');
          }
        } catch (err) {
          showAlert('Error: ' + err.message, 'Error');
        }
      });
      
      // Remove group functionality
      document.querySelectorAll('#groups-list .badge-remove-btn').forEach(btn => {
        btn.addEventListener('click', async () => {
          const groupId = btn.parentElement.dataset.groupId;
          const groupName = btn.parentElement.textContent.trim().replace('✕', '').trim();
          
          showConfirm(`Remove group "${groupName}" from this user?`, async () => {
            try {
              const response = await fetch(`/directory/users/${userId}/groups/${groupId}/remove`, { method: 'POST' });
              if (response.ok) {
                location.reload();
              } else {
                const data = await response.json();
                showAlert('Error: ' + (data.error || 'Failed to remove group'), 'Error');
              }
            } catch (err) {
              showAlert('Error: ' + err.message, 'Error');
            }
          }, 'Remove Group');
        });
      });
