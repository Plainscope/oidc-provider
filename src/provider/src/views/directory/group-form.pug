extends layout

block content
  style.
    .form-container {
      max-width: 600px;
      margin: 0 auto;
    }
    .header-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }
    h1 {
      color: #2d3748;
      margin: 0;
    }
    .form-group {
      margin-bottom: 1.5rem;
    }
    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      color: #4a5568;
      font-weight: 600;
      font-size: 0.875rem;
    }
    .form-group input,
    .form-group textarea,
    .form-group select {
      width: 100%;
      padding: 0.75rem;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      font-size: 0.875rem;
      transition: border-color 0.2s;
      font-family: inherit;
    }
    .form-group input:focus,
    .form-group textarea:focus,
    .form-group select:focus {
      outline: none;
      border-color: #667eea;
    }
    .form-group textarea {
      resize: vertical;
      min-height: 100px;
    }
    .form-group small {
      display: block;
      margin-top: 0.25rem;
      color: #718096;
      font-size: 0.75rem;
    }
    .error-message {
      background: #fed7d7;
      color: #c53030;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      font-size: 0.875rem;
    }
    .form-actions {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
    }
    .required {
      color: #e53e3e;
    }

  .card.form-container
    .header-actions
      h1= title
      a.btn.btn-secondary(href="/directory/groups") Cancel
    
    if error
      .error-message= error
    
    form(method="POST", action=group ? `/directory/groups/${group.id}/update` : '/directory/groups')
      .form-group
        label(for="name") Group Name 
          span.required *
        input#name(
          type="text",
          name="name",
          value=group ? group.name : '',
          required,
          maxlength="255",
          placeholder="e.g., developers, managers"
        )
        small Unique name for the group within the domain
      
      .form-group
        label(for="domain_id") Domain 
          span.required *
        select#domain_id(
          name="domain_id",
          required
        )
          option(value="") Select a domain...
          each domain in domains
            option(
              value=domain.id,
              selected=group && group.domain_id === domain.id
            )= domain.name
        small The domain this group belongs to
      
      .form-group
        label(for="description") Description
        textarea#description(
          name="description",
          maxlength="500",
          placeholder="Brief description of the group's purpose"
        )= group ? group.description : ''
        small Optional description of what this group represents
      
      .form-actions
        button.btn.btn-primary(type="submit")
          = group ? 'Update Group' : 'Create Group'
        a.btn.btn-secondary(href="/directory/groups") Cancel
